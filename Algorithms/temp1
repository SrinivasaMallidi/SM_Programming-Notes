from django.contrib import admin
from .models import Server, ApplicationUrl, DBDetails, PasswordVault



@admin.register(Server)
class ServerAdmin(admin.ModelAdmin):
    list_display = ('name', 'ip_address', 'cluster_name', 'tag')
    list_display_links = ('name',)


@admin.register(ApplicationUrl)
class ApplicationUrlAdmin(admin.ModelAdmin):
    list_display = ('name','server')
    list_display_links = ('name',)


@admin.register(DBDetails)
class DBDetailsAdmin(admin.ModelAdmin):
    list_display = ('dbname','tag')
    list_display_links = ('dbname',)


@admin.register(PasswordVault)
class PasswordVaultAdmin(admin.ModelAdmin):
    list_display = ('username','tag')
    list_display_links = ('username',)
