from django.db import models

class Server(models.Model):
    name = models.CharField(max_length=100)
    ip_address = models.CharField(max_length=100)
    cluster_name = models.CharField(max_length=100)
    tag = models.CharField(max_length=100)

    def __str__(self):
        return self.name

class ApplicationUrl(models.Model):
    url = models.URLField()
    name = models.CharField(max_length=100)
    server = models.ForeignKey(Server, on_delete=models.CASCADE, related_name='application_urls')

    def __str__(self):
        return self.url


class DBDetails(models.Model):
    dbname = models.CharField(max_length=100)
    hostname = models.CharField(max_length=100)
    port = models.IntegerField()
    servicename = models.CharField(max_length=100)
    tag = models.CharField(max_length=100)

    def __str__(self):
        return self.dbname

class PasswordVault(models.Model):
    tag = models.CharField(max_length=100)
    username = models.CharField(max_length=100)
    password = models.CharField(max_length=100)  # You may want to consider using a more secure field like TextField with encryption

    def __str__(self):
        return self.tag
