# Database connection details
$hostname = 'your_hostname'
$port = 'your_port'
$servicename = 'your_servicename'
$username = 'your_username'
$password = 'your_password'

# Construct the connection string
$connectionString = "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=$hostname)(PORT=$port))(CONNECT_DATA=(SERVICE_NAME=$servicename)));User Id=$username;Password=$password;"

# Create a connection object
$connection = New-Object System.Data.OracleClient.OracleConnection($connectionString)

# Open the connection
$connection.Open()

try {
    # Create a command object with your SQL query
    $sqlCommandText = "SELECT WONUM, DESCRIPTION, STATUS FROM WORKORDER WHERE WONUM = '123456'"  # Replace '123456' with your value
    $command = New-Object System.Data.OracleClient.OracleCommand($sqlCommandText, $connection)

    # Execute the command and get the results
    $reader = $command.ExecuteReader()

    # Loop through the results and print them
    while ($reader.Read()) {
        Write-Output ("WONUM: " + $reader.GetValue(0) + ", DESCRIPTION: " + $reader.GetValue(1) + ", STATUS: " + $reader.GetValue(2))
    }

    # Close the reader
    $reader.Close()
} finally {
    # Close the connection
    $connection.Close()
}
