from django.db import models

# Create your models here.

class Vulnerability(models.Model):
    VITNUMBER = models.CharField(max_length=100)
    CONFIGURATION_ITEM = models.CharField(max_length=100)
    SUMMARY = models.CharField(max_length=255)
    SOLUTION = models.TextField()
    SEVERITY = models.CharField(max_length=50)
    MONTH = models.DateField()
    STATE = models.CharField(max_length=50)

    def __str__(self):
        return f"{self.VITNUMBER}: {self.SUMMARY}"

class Proof(models.Model):
    vulnerability = models.ForeignKey(Vulnerability, on_delete=models.CASCADE, related_name='proofs')
    PROOF = models.CharField(max_length=255)

    def __str__(self):
        return f"{self.vulnerability.VITNUMBER} - Proof {self.pk}"
